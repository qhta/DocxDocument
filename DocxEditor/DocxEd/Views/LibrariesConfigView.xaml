<UserControl x:Class="DocxEd.Views.LibrariesConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:DocxEd.Views"
             xmlns:vm="clr-namespace:DocxEd.ViewModels"
             xmlns:utl="clr-namespace:Qhta.WPF.Utils;assembly=Qhta.WPF.Utils"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type={x:Type vm:LibrariesConfigListViewModel}}"
             d:DesignHeight="450"
             d:DesignWidth="800">
  <Grid>
    <FrameworkElement x:Name="dummyElement"
                      Visibility="Collapsed" />
    <DataGrid x:Name="MainDataGrid"
              AutoGenerateColumns="True"
              AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"
              InitializingNewItem="DataGrid_InitializingNewItem"
              HorizontalContentAlignment="Stretch"
              CanUserAddRows="True"
              utl:CollectionViewBehavior.EnableCollectionSynchronization="True"
              utl:CollectionViewBehavior.IsFocusable="True"
              utl:CollectionViewBehavior.ShowFilterButton="True"
              ClipboardCopyMode="IncludeHeader"
              ItemsSource="{Binding Path=VisibleItems}">
    </DataGrid>
  </Grid>
</UserControl>
