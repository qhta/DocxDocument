<UserControl x:Class="DocxEd.Views.NamespacesListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DocxEd"
             xmlns:views="clr-namespace:DocxEd.Views"
             xmlns:vm="clr-namespace:DocxEd.ViewModels"
             xmlns:hlp="clr-namespace:DocxEd.Helpers"
             xmlns:utl="clr-namespace:Qhta.WPF.Utils;assembly=Qhta.WPF.Utils"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:NamespacesViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800">
  <Grid>
    <FrameworkElement x:Name="dummyElement"
                      Visibility="Collapsed" />
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <views:NamespacesDisplayOptionsView />
      <DataGrid x:Name="MainDataGrid"
                Grid.Row="1"
                AutoGenerateColumns="true"
                AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"
                ClipboardCopyMode="IncludeHeader"
                utl:CollectionViewBehavior.EnableCollectionSynchronization="True"
                utl:CollectionViewBehavior.IsFocusable="True"
                ItemsSource="{Binding Items}">
      </DataGrid>
    </Grid>
  </Grid>
</UserControl>
