<Window x:Class="DocxEd.Views.FileViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocxEd"
        xmlns:views="clr-namespace:DocxEd.Views"
        xmlns:vm="clr-namespace:DocxEd.ViewModels"
        xmlns:hlp="clr-namespace:DocxEd.Helpers"
        xmlns:utl="clr-namespace:Qhta.WPF.Utils;assembly=Qhta.WPF.Utils"
        d:DataContext="{d:DesignInstance Type={x:Type vm:FileViewModel}}"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="450"
        Width="800">
  <Grid>
    <Border Margin="5">
      <TextBox Text="{Binding Path=Text}" />
    </Border>
  </Grid>
</Window>
