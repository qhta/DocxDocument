<Window x:Class="DocxEd.Views.TypeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocxEd"
        xmlns:views="clr-namespace:DocxEd.Views"
        xmlns:vm="clr-namespace:DocxEd.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type={x:Type vm:TypeListViewModel}}"
        Title="{Binding Caption}"
        Height="450" Width="800">
  <Window.Style>
    <Style TargetType="Window">
      <Setter Property="ForceCursor"
              Value="True" />
      <Style.Triggers>
        <DataTrigger Binding="{Binding IsBusy}"
                     Value="True">
          <Setter Property="Cursor"
                  Value="Wait" />
        </DataTrigger>
      </Style.Triggers>
    </Style>
  </Window.Style>
  <Grid>
    <views:TypeListView/>
    <Button x:Name="RefreshButton"
            Background="Transparent"
            BorderBrush="Transparent"
            Width="24"
            Height="24"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Command="{Binding Path=RefreshResultsCommand}">
      <Image Source="/Images/Refresh.png"
             ToolTip="{x:Static local:CommonStrings.Refresh}" />
    </Button>    
  </Grid>
</Window>
