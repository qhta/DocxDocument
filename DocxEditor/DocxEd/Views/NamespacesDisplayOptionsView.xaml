<UserControl x:Class="DocxEd.Views.NamespacesDisplayOptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:app="clr-namespace:DocxEd"
             xmlns:views="clr-namespace:DocxEd.Views"
             xmlns:vm="clr-namespace:DocxEd.ViewModels"
             xmlns:hlp="clr-namespace:DocxEd.Helpers"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:utl="clr-namespace:Qhta.WPF.Utils;assembly=Qhta.WPF.Utils"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:NamespacesViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800">
  <Grid>
    <StackPanel Orientation="Horizontal"
                Visibility="{Binding Path=ShowTargetsOnlyEnabled,
                Converter={StaticResource BoolToVisibilityConverter}}"
                >
      <Label Margin="2,0"
             FontWeight="Bold"
             Content="{x:Static app:CommonStrings.Namespaces}" />
      <CheckBox Margin="2,0"
                VerticalAlignment="Center"
                IsChecked="{Binding Path=ShowTargetsOnly}"
                Content="{x:Static app:CommonStrings.TargetsOnly}" />
    </StackPanel>
  </Grid>
</UserControl>
