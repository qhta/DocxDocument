<UserControl x:Class="ModelGenApp.Views.TypeInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:ModelGenApp.Views"
             xmlns:vm="clr-namespace:ModelGenApp.ViewModels"
             xmlns:hlp="clr-namespace:ModelGenApp.Helpers"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:bhv="clr-namespace:Qhta.WPF.Behaviors;assembly=Qhta.WPF.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <UserControl.Resources>
    <Style x:Key="noHeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
      <Setter Property="Visibility" Value="Collapsed" />
    </Style>
  </UserControl.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <views:TypeSummaryView />
    <Grid Grid.Row="1"
          Visibility="{Binding Path=Members.Visible, Converter={StaticResource BoolToVisibilityConverter}}"
          >
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <StackPanel Orientation="Horizontal">
        <Label Margin="2,0"
            FontWeight="Bold"
            Content="{Binding Path=Members.Label}"/>
        <CheckBox Margin="2,0"
                  VerticalAlignment="Center"
                  IsChecked="{Binding Path=Members.ShowAcceptedOnly}"
                  Content="Accepted only"
                  Visibility="{Binding Path=Members.ShowAcceptedOnlyVisible,
                               Converter={StaticResource BoolToVisibilityConverter}}"/>
        <CheckBox Margin="20,0"
                  VerticalAlignment="Center"
                  IsChecked="{Binding Path=Members.ShowDeclaringType}"
                  Content="Show declaring type"
                  Visibility="{Binding Path=Members.ShowDeclaringTypeVisible,
                               Converter={StaticResource BoolToVisibilityConverter}}"/>
      </StackPanel>
      <DataGrid Grid.Row="1"
              AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"
              bhv:CollectionViewBehavior.EnableCollectionSynchronization="True"
              ItemsSource="{Binding Path=Members.Items}"/>
    </Grid>
  </Grid>
</UserControl>
