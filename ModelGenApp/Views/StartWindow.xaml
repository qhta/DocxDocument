<Window x:Class="ModelGenApp.Views.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModelGenApp"
        xmlns:views="clr-namespace:ModelGenApp.Views"
        xmlns:vm="clr-namespace:ModelGenApp.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:StartProcessViewModel}"
        Title="StartWindow" Height="360" Width="500">
  <Window.CommandBindings>
    <CommandBinding Command="ApplicationCommands.Close"
                     Executed="CloseCommand_Executed"/>
  </Window.CommandBindings>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="40"/>
    </Grid.RowDefinitions>
    <views:ProcessOptionsView Margin="10" DataContext="{Binding Path=ProcessOptionsVM}"/>
    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
      <Button Content="Start" Width="100"
              Command="{Binding StartProcessCommand}"/>
      <Button Content="Cancel" Width="100" Margin="20,0,0,0"
              Command="ApplicationCommands.Close"/>
    </StackPanel>
  </Grid>
</Window>
