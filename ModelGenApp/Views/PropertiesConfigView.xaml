<UserControl x:Class="ModelGenApp.Views.PropertiesConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:ModelGenApp.Views"
             xmlns:vm="clr-namespace:ModelGenApp.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type={x:Type vm:PropertyConfigViewModel}}"
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <DataGrid 
      AutoGenerateColumns="False"
      HorizontalContentAlignment="Stretch"
      ItemsSource="{Binding Path=Items}">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Original type" Binding="{Binding Path=OrigType}"/>
        <DataGridTextColumn Header="Original name" Binding="{Binding Path=OrigName}"/>
        <DataGridCheckBoxColumn Header="Excluded property" Binding="{Binding ExcludedProperty, UpdateSourceTrigger=PropertyChanged}" />
        <DataGridTextColumn Header="Target name" Binding="{Binding TargetName}"/>
        <DataGridTextColumn Header="Target prop type" Binding="{Binding TargetPropertyType}"/>
      </DataGrid.Columns>
    </DataGrid>  </Grid>
</UserControl>
