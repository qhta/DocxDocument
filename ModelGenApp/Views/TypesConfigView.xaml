        <DataGridCheckBoxColumn Header="Excluded type" Binding="{Binding ExcludedType, UpdateSourceTrigger=PropertyChanged}" />
        <DataGridTextColumn Header="Target namespace" Binding="{Binding TargetNamespace}"/>
