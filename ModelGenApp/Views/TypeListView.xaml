<UserControl x:Class="ModelGenApp.Views.TypeListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:ModelGenApp.Views"
             xmlns:vm="clr-namespace:ModelGenApp.ViewModels"
             xmlns:hlp="clr-namespace:ModelGenApp.Helpers"
             xmlns:utils="clr-namespace:Qhta.WPF.DataGridUtils;assembly=Qhta.WPF.DataGridUtils"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type={x:Type vm:TypeListViewModel}}"
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <FrameworkElement x:Name="dummyElement" Visibility="Collapsed"/>
    <DataGrid AutoGenerateColumns="False"
      ItemsSource="{Binding Items}">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Kind" Binding="{Binding Path=TypeKind}"
                            IsReadOnly="true" />
        <DataGridTextColumn Header="Acceptance" Binding="{Binding Path=Acceptance}"
                            IsReadOnly="true"/>
        <DataGridTextColumn Header="Validity" Binding="{Binding Path=Validity}"
                            IsReadOnly="true"/>
        <DataGridTextColumn Header="Name" Binding="{Binding Path=Type.Name}"
                            IsReadOnly="true"/>
        <DataGridTextColumn Header="Target name" Binding="{Binding Path=TargetName}"
                            Visibility="{Binding DataContext.IsTargetNameVisible,
                            Source={x:Reference dummyElement}, 
                            Converter={StaticResource BoolToVisibilityConverter}}"
                            IsReadOnly="true"/>
        <utils:DataGridContentBoundColumn Binding="{Binding Path=Type}"
                                          ContentTemplate="{StaticResource TypeInfoButtonTemplate}">
        </utils:DataGridContentBoundColumn>
        <utils:DataGridContentBoundColumn Binding="{Binding Path=Type}"
                            Visibility="{Binding DataContext.IsInvalidMarkVisible,
                            Source={x:Reference dummyElement}, 
                            Converter={StaticResource BoolToVisibilityConverter}}"
                            ContentTemplate="{StaticResource InvalidItemImageTemplate}">
        </utils:DataGridContentBoundColumn>
        <utils:DataGridContentBoundColumn Binding="{Binding Path=Type}"
                            Visibility="{Binding DataContext.CanShowErrorDetails,
                            Source={x:Reference dummyElement}, 
                            Converter={StaticResource BoolToVisibilityConverter}}"
                            ContentTemplate="{StaticResource InvalidItemButtonTemplate}">
        </utils:DataGridContentBoundColumn>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
