<UserControl x:Class="ModelGenApp.Views.TypeListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ModelGenApp"
             xmlns:views="clr-namespace:ModelGenApp.Views"
             xmlns:vm="clr-namespace:ModelGenApp.ViewModels"
             xmlns:hlp="clr-namespace:ModelGenApp.Helpers"
             xmlns:utils="clr-namespace:Qhta.WPF.Utils;assembly=Qhta.WPF.Utils"
             xmlns:utl="clr-namespace:Qhta.WPF.Utils;assembly=Qhta.WPF.Utils"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type={x:Type vm:TypeListViewModel}}"
             d:DesignHeight="450"
             d:DesignWidth="800">
  <Grid>
    <FrameworkElement x:Name="dummyElement"
                      Visibility="Collapsed" />
    <DataGrid x:Name="MainDataGrid"
              AutoGenerateColumns="False"
              utl:CollectionViewBehavior.EnableCollectionSynchronization="True"
              utl:CollectionViewBehavior.ShowFilterButton="True"
              ItemsSource="{Binding Items}">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Kind"
                            Binding="{Binding Path=TypeKind}"
                            utl:CollectionViewBehavior.ShowFilterButton="True"
                            IsReadOnly="true" />
        <DataGridTextColumn Header="Acceptance"
                            Binding="{Binding Path=Acceptance}"
                            utl:CollectionViewBehavior.ShowFilterButton="True"
                            IsReadOnly="true" />
        <DataGridTextColumn Header="Name"
                            Binding="{Binding Path=Type.Name}"
                            utl:CollectionViewBehavior.ShowFilterButton="True"
                            IsReadOnly="true" />
        <DataGridTextColumn Header="Target name"
                            Binding="{Binding Path=TargetName}"
                            Visibility="{Binding DataContext.IsTargetNameVisible,
                            Source={x:Reference dummyElement}, 
                            Converter={StaticResource BoolToVisibilityConverter}}"
                            utl:CollectionViewBehavior.ShowFilterButton="True"
                            IsReadOnly="true" />
        <utils:DataGridContentBoundColumn Binding="{Binding Path=Type}"
                            Header=""
                            CanUserSort="False"
                            utl:CollectionViewBehavior.ShowFilterButton="False"
                            ContentTemplate="{StaticResource TypeInfoButtonTemplate}" />
        <utils:DataGridContentBoundColumn Binding="{Binding Path=Type}"
                            Header=""
                            SortMemberPath="ValidationError"
                            utl:CollectionViewBehavior.HiddenHeader="{x:Static local:CommonStrings.ValidationError}"
                            utl:CollectionViewBehavior.ShowFilterButton="True"
                            Visibility="{Binding DataContext.IsInvalidMarkVisible,
                            Source={x:Reference dummyElement}, 
                            Converter={StaticResource BoolToVisibilityConverter}}"
                            ContentTemplate="{StaticResource InvalidItemButtonTemplate}" />
        <DataGridTextColumn Header="Description"
                            utl:CollectionViewBehavior.ShowFilterButton="True"
                            Binding="{Binding Path=Description}"
                            IsReadOnly="true" />
        <DataGridTextColumn Header="Documentation"
                            utl:CollectionViewBehavior.ShowFilterButton="True"
                            Binding="{Binding Path=Documentation}"
                            IsReadOnly="true" />
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
