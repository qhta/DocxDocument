<UserControl x:Class="ModelGenApp.Views.ProcessOptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModelGenApp"
             xmlns:vm="clr-namespace:ModelGenApp.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:ProcessOptionsViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="40"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="40"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="40"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="40"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="40"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="40"/>
    </Grid.RowDefinitions>
    <Slider Grid.Column="0" Grid.RowSpan="11"
      Minimum="1" Maximum="6" Orientation="Vertical" TickFrequency="1" TickPlacement="BottomRight" 
            IsSnapToTickEnabled="True" Margin="0,10,0,15" 
            Value="{Binding Path=Options.StopAtPhase}"/>
    <Label Grid.Column="1" Grid.Row="0" Content="Generate code"/>
    <Label Grid.Column="1" Grid.Row="2" Content="Validate types"/>
    <Label Grid.Column="1" Grid.Row="4" Content="Check type Uusage"/>
    <Label Grid.Column="1" Grid.Row="6" Content="Set type conversions"/>
    <StackPanel Grid.Column="1" Grid.Row="8" VerticalAlignment="Center" Orientation="Horizontal">
      <Label Content="Rename types" />
    </StackPanel>
    <StackPanel Grid.Column="1" Grid.Row="10" VerticalAlignment="Center" Orientation="Horizontal">
      <Label Content="Scan type" />
      <ComboBox MinWidth="300" VerticalContentAlignment="Center"
                IsEditable="True"
                Text="{Binding Path=Options.ScanTypeName}"
                ItemsSource="{Binding Path=Options.ScanTypeName}"/>
    </StackPanel>
  </Grid>
</UserControl>
