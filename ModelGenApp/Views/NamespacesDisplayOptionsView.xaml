<UserControl x:Class="ModelGenApp.Views.NamespacesDisplayOptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ModelGenApp"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
  <Grid>
    <StackPanel Orientation="Horizontal"
                Visibility="{Binding Path=ShowDisplayOptions,
                  Converter={StaticResource BoolToVisibilityConverter}}">
      <CheckBox Margin="2,0"
                VerticalAlignment="Center"
                IsChecked="{Binding Path=ShowTargetNamespaces}"
                Content="{x:Static local:CommonStrings.ShowTargetNamespaces}" />
    </StackPanel>
  </Grid>
</UserControl>
